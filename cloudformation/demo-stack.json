{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "DBPassword": {
      "Type": "Custom::SecretGenerator",
      "Properties": {
        "Name": "/test-api/postgres/root/PGPASSWORD",
        "Alphabet": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789_@#!",
        "Length": 30,
        "ServiceToken": {
          "Fn::Join": [
            ":",
            [
              "arn:aws:lambda",
              {
                "Ref": "AWS::Region"
              },
              {
                "Ref": "AWS::AccountId"
              },
              "function:CFNCustomSecretGenerator"
            ]
          ]
        }
      }
    }
  },
  "Outputs": {
    "Secret": {
      "Value": {
        "Fn::GetAtt": [
          "DBPassword",
          "Secret"
        ]
      },
      "Description": "You should not do this of course"
    }
  }
}
