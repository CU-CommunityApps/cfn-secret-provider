{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "DBPassword": {
      "Type": "Custom::Secret",
      "Properties": {
        "Name": "/demo/PGPASSWORD",
        "Alphabet": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789_@#!",
        "Length": 30,
        "ReturnSecret": true,
        "Version": "v1",
        "ServiceToken": {
          "Fn::Join": [
            ":",
            [
              "arn:aws:lambda",
              {
                "Ref": "AWS::Region"
              },
              {
                "Ref": "AWS::AccountId"
              },
              "function:binxio-cfn-secret-provider"
            ]
          ]
        }
      }
    }
  },
  "PrivateKey": {
    "Type": "Custom::RSAKey",
    "Properties": {
      "Name": "/demo/sshkey",
      "ReturnSecret": true,
      "Version": "v1",
      "ServiceToken": {
        "Fn::Join": [
          ":",
          [
            "arn:aws:lambda",
            {
              "Ref": "AWS::Region"
            },
            {
              "Ref": "AWS::AccountId"
            },
            "function:binxio-cfn-secret-provider"
          ]
        ]
      }
    }
  },
  "Outputs": {
    "Secret": {
      "Value": {
        "Fn::GetAtt": [
          "DBPassword",
          "Secret"
        ]
      },
      "Description": "the generated secret, do expose this as Output Parameter in production"
    },
    "Arn": {
      "Value": {
        "Fn::GetAtt": [
          "DBPassword",
          "Arn"
        ]
      },
      "Description": "ARN of the password in the Parameter Store"
    },
    "PrivateKey": {
      "Value": {
        "Fn::GetAtt": [
          "PrivateKey",
          "Secret"
        ]
      },
      "Description": "the rsa private key generated, do expose this as Output Parameter in production"
    },
    "PublicKey": {
      "Value": {
        "Fn::GetAtt": [
          "PrivateKey",
          "PublicKey"
        ]
      },
      "Description": "the public key, safe to expose"
    },
    "PrivateKeyArn": {
      "Value": {
        "Fn::GetAtt": [
          "PrivateKey",
          "Arn"
        ]
      },
      "Description": "ARN of the private key in the Parameter Store"
    }
  }
}
